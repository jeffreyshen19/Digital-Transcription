doctype html
html
  head
    - var title = "Collections"
    include includes/head.pug
    
    link(href = "/dist/CSS/collections.css" rel = "stylesheet" type = "text/css")
  body
    #container
      .inverted
        include includes/nav.pug
      
      #collections.columns.is-multiline.is-mobile.is-centered
        each collection in collections
          .collection.column.is-narrow 
            .img(style = "background-image:url('/" + collection.img + "')")
            h3= collection.name 
            br
            a.button.is-blue(href = "/browse?collection=" + collection._id + "&completed=all") Browse
            a.button(href = "/browse/collections/" + collection._id) About
      
    include includes/footer.pug

    script(src = "/bower_components/jquery/dist/jquery.min.js")
    script(src = "/dist/JS/collection-min.js")
