footer
  .columns.is-vcentered 
    .column.left 
      h3.is-serif= config.title 
      p= config.description 
    .column.has-text-right.right
      .links.is-uppercase
        a(href = "/about") About
        a(href = "/help") Help
        a(href = "/privacy") Privacy
        a(href = "https://github.com/jeffreyshen19/TranscribePA") Source Code 
      .icons 
        each social in config.social  
          a(href = social.url).is-size-5
            i.fab.fa-lg(class = "fa-" + social.name)
        a(href = "mailto:" + email).is-size-5
          i.fas.fa-envelope.fa-lg 
  
